@page 
@model HomeBrewToolsWebApp.Pages.HomeBrewLogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>

    <form>
        <p>
            Type: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter(case sensitive)" />
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.HomeBrewLog[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HomeBrewLog[0].Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HomeBrewLog[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HomeBrewLog[0].StartingGravity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HomeBrewLog[0].UpdatedGravity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HomeBrewLog[0].FinalGravity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HomeBrewLog[0].UpdatedDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HomeBrewLog)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartingGravity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedGravity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinalGravity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

